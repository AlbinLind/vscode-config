// Place your key bindings in this file to override the defaults
[
  {
    "command": "vscode-neovim.send",
    "key": "alt+j",
    "args": "<A-j>"
  },
  {
    "command": "vscode-neovim.send",
    "key": "alt+k",
    "args": "<A-k>"
  },
  { "command": "vscode-neovim.send", "key": "ctrl+d", "args": "<C-d>" },
  { "command": "vscode-neovim.send", "key": "ctrl+u", "args": "<C-u>" },
  { "command": "vscode-neovim.send", "key": "ctrl+h", "args": "<C-h>" },
  { "command": "vscode-neovim.send", "key": "ctrl+j", "args": "<C-j>" },
  { "command": "vscode-neovim.send", "key": "ctrl+k", "args": "<C-k>" },
  { "command": "vscode-neovim.send", "key": "ctrl+l", "args": "<C-l>" },
  
  { "command": "vscode-neovim.send", "key": "ctrl+left", "args": "<C-Left>"},
  {
    "command": "vscode-neovim.send",
    "key": "ctrl+right",
    "args": "<C-right>"
  },
  {"key": "ctrl+up", "command": "git.stage", "when": "workbench.scm.active"},
  {"key": "ctrl+down", "command": "git.unstage", "when": "workbench.scm.active"},
]
